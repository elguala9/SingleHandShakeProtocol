#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/ts-node" ]; then
  exec "$basedir/ts-node"  "$basedir/../add-js-import/dist/add-js-import.js" "$@"
else 
  exec ts-node  "$basedir/../add-js-import/dist/add-js-import.js" "$@"
fi
